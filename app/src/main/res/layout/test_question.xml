<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/progBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:maxHeight="20dp"
        android:progressDrawable="@drawable/test_progress_style"
        android:minHeight="20dp"
        android:progress="70"
        android:layerType="none" />

    <TextView
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:id="@+id/progPerText"
        android:textSize="28dp"
        android:layout_marginTop="15dp"
        android:text="0%"/>

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical|center_horizontal|center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:padding="10dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:id="@+id/questionText"
                android:textSize="34dp"
                android:text="나는 나에게 관심이나 이목이 집중되는 것을 좋아하지 않는다."/>
            <Button
                android:layout_marginVertical="5dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:visibility="invisible"
                android:id="@+id/resBtn"
                android:background="@drawable/button_style"
                android:backgroundTint="@color/colorVeryInacc"
                android:textColor="@color/buttonTextColor"
                android:layout_marginTop="100dp"
                android:layout_gravity="center_horizontal"
                android:text="결과 확인!"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:id="@+id/btnGroup"
                android:gravity="center_vertical|center_horizontal|center"
                android:orientation="vertical">
                <Button
                    android:layout_marginVertical="5dp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:id="@+id/viaBtn"
                    android:background="@drawable/button_style"
                    android:backgroundTint="@color/colorVeryInacc"
                    android:textColor="@color/buttonTextColor"
                    android:text="전혀요"/>
                <Button
                    android:layout_marginVertical="5dp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:id="@+id/iaBtn"
                    android:background="@drawable/button_style"
                    android:backgroundTint="@color/colorInacc"
                    android:textColor="@color/buttonTextColor"
                    android:text="아니요"/>
                <Button
                    android:layout_marginVertical="5dp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:id="@+id/mBtn"
                    android:background="@drawable/button_style"
                    android:backgroundTint="@color/colorMiddle"
                    android:textColor="@color/buttonTextColor"
                    android:text="그럭저럭"/>
                <Button
                    android:layout_marginVertical="5dp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:id="@+id/aBtn"
                    android:background="@drawable/button_style"
                    android:backgroundTint="@color/colorAcc"
                    android:textColor="@color/buttonTextColor"
                    android:text="예"/>
                <Button
                    android:layout_marginVertical="5dp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:id="@+id/vaBtn"
                    android:background="@drawable/button_style"
                    android:backgroundTint="@color/colorVeryAcc"
                    android:textColor="@color/buttonTextColor"
                    android:text="정확해요"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>